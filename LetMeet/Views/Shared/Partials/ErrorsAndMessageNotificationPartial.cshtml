    <span aria-hidden="true">&times;</span>
    </button>
    </div>*@

</div>

<div class="messages-container ">

    @{

        foreach (string message in messages)
        {
            <script >

                window.addEventListener('load', () => {
                    MeShowNotification('<b>@message </b>', '', 'add_alert', 'info', @delay, 'top', 'center');

                });

            </script>
            delay += 1000;
        }



    }
</div>

