@{
    Layout = "";
    //for errors and messages
    List<string> errors = ViewData[ViewStringHelper.Errors] as List<string> ?? new List<string>();
    List<string> messages = ViewData[ViewStringHelper.Messages] as List<string> ?? new List<string>();
}

<div class="errors-container ">


    @{
        int delay = 5000;

        foreach (string error in errors)
        {
            <script>

                window.addEventListener('load', () => {
                    MeShowNotification('<b>@error </b>', '', 'add_alert', 'danger', @delay, 'top', 'center');

                });

            </script>
            delay += 1000;

        }

    }


